{
  "name": "backend",
  "version": "1.0.0",
  "description": "Node express backend",
  "main": "backend/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "log": "node services/eventLogger/logWriter",
    "rasa": "cd rasa/ && rasa run",
    "all": "npm-run-all --parallel dev rasa",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --testPathPattern=/tests",
    "start:test": "cross-env NODE_ENV=test node index.js",
    "cy:open": "cypress open",
    "cy:test": "cypress run",
    "lint": "eslint .",
    "build": "rm -rf build && cd ../frontend && npm run build --prod && cp -r build ../backend && cd ../frontend && rm -rf build",
    "clean": "rm -rf build"
  },
  "author": "Helsingin Yliopisto",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "body-parser": "*",
    "commander": "^8.1.0",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "deep-diff": "^1.0.2",
    "dotenv": "^10.0.0",
    "express": "*",
    "express-async-errors": "^3.1.1",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.0.1",
    "mongoose": "^5.13.8",
    "mongoose-unique-validator": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "querystring": "^0.2.0",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "babel-jest": "^27.0.6",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^7.0.3",
    "cypress": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.0.6",
    "json2csv": "^5.0.6",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "NODE_ENV": "test"
    }
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
